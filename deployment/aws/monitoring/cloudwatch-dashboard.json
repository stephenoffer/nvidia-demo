{
  "widgets": [
    {
      "type": "metric",
      "x": 0,
      "y": 0,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/EKS", "CPUUtilization", "ClusterName", "multimodal-pipeline-cluster"],
          [".", "MemoryUtilization", ".", "."],
          [".", "GPUUtilization", ".", "."]
        ],
        "period": 300,
        "stat": "Average",
        "region": "us-east-1",
        "title": "EKS Cluster Metrics",
        "yAxis": {
          "left": {
            "min": 0,
            "max": 100
          }
        },
        "annotations": {
          "horizontal": [
            {
              "value": 80,
              "label": "Warning Threshold",
              "color": "#ff9900"
            },
            {
              "value": 90,
              "label": "Critical Threshold",
              "color": "#ff0000"
            }
          ]
        }
      }
    },
    {
      "type": "metric",
      "x": 12,
      "y": 0,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/ApplicationELB", "TargetResponseTime", "LoadBalancer", "app/multimodal-pipeline-internal/..."],
          [".", "RequestCount", ".", "."],
          [".", "HTTPCode_Target_2XX_Count", ".", "."],
          [".", "HTTPCode_Target_4XX_Count", ".", "."],
          [".", "HTTPCode_Target_5XX_Count", ".", "."]
        ],
        "period": 300,
        "stat": "Sum",
        "region": "us-east-1",
        "title": "ALB Metrics",
        "yAxis": {
          "left": {
            "min": 0
          }
        }
      }
    },
    {
      "type": "log",
      "x": 0,
      "y": 6,
      "width": 24,
      "height": 6,
      "properties": {
        "query": "SOURCE '/aws/eks/pipeline-production' | fields @timestamp, @message, @logStream\n| filter @message like /ERROR/ or @message like /FATAL/ or @message like /CRITICAL/\n| sort @timestamp desc\n| limit 100",
        "region": "us-east-1",
        "title": "Pipeline Errors and Critical Logs",
        "view": "table"
      }
    },
    {
      "type": "metric",
      "x": 0,
      "y": 12,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/S3", "BucketSizeBytes", "BucketName", "multimodal-pipeline-data-production", "StorageType", "StandardStorage"],
          [".", "NumberOfObjects", ".", ".", "StorageType", "AllStorageTypes"],
          [".", "BytesDownloaded", ".", "."],
          [".", "BytesUploaded", ".", "."]
        ],
        "period": 86400,
        "stat": "Average",
        "region": "us-east-1",
        "title": "S3 Storage Metrics",
        "yAxis": {
          "left": {
            "min": 0
          }
        }
      }
    },
    {
      "type": "metric",
      "x": 12,
      "y": 12,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/EBS", "VolumeReadOps", "VolumeId", "vol-*"],
          [".", "VolumeWriteOps", ".", "."],
          [".", "VolumeReadBytes", ".", "."],
          [".", "VolumeWriteBytes", ".", "."]
        ],
        "period": 300,
        "stat": "Sum",
        "region": "us-east-1",
        "title": "EBS Volume Metrics",
        "yAxis": {
          "left": {
            "min": 0
          }
        }
      }
    },
    {
      "type": "metric",
      "x": 0,
      "y": 18,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/EKS", "NodeCount", "ClusterName", "multimodal-pipeline-cluster"],
          [".", "PodCount", ".", "."],
          [".", "ContainerRestartCount", ".", "."]
        ],
        "period": 300,
        "stat": "Average",
        "region": "us-east-1",
        "title": "EKS Node and Pod Metrics",
        "yAxis": {
          "left": {
            "min": 0
          }
        }
      }
    },
    {
      "type": "metric",
      "x": 12,
      "y": 18,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/CloudWatch", "IncomingLogEvents", "LogGroupName", "/aws/eks/pipeline-production"],
          [".", "IncomingBytes", ".", "."],
          [".", "DeliveryErrors", ".", "."]
        ],
        "period": 300,
        "stat": "Sum",
        "region": "us-east-1",
        "title": "CloudWatch Logs Metrics",
        "yAxis": {
          "left": {
            "min": 0
          }
        }
      }
    },
    {
      "type": "log",
      "x": 0,
      "y": 24,
      "width": 24,
      "height": 6,
      "properties": {
        "query": "SOURCE '/aws/eks/pipeline-production' | fields @timestamp, @message\n| filter @message like /WARN/ or @message like /WARNING/\n| stats count() by bin(5m)\n| sort @timestamp desc",
        "region": "us-east-1",
        "title": "Pipeline Warnings Over Time",
        "view": "timeSeries",
        "stacked": false
      }
    }
  ]
}

